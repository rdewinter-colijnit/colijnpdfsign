<?xml version='1.0' encoding='utf-8'?>
<widget id="com.colijnit.ione.pdfsign" version="0.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iOne Signature</name>
    <description>
        iOne PDF Signature app
    </description>
    <author email="poul@colijn-it.nl" href="http://colijn-it.nl">
        Colijn IT
    </author>

    <hook type="after_platform_add" src="hooks/custom-widget.js" />
    <preference name="EnableDeveloperConsole" value="false" />

    <platform name="ios">
        <preference name="tabris-plugins" value="PDF" />
        <icon src="icons/apple-icon-180x180.png" width="180" height="180" />
        <icon src="icons/apple-icon-60x60.png" width="60" height="60" />
        <icon src="icons/apple-icon-120x120.png" width="120" height="120" />
        <icon src="icons/apple-icon-76x76.png" width="76" height="76" />
        <icon src="icons/apple-icon-152x152.png" width="152" height="152" />
        <icon src="icons/apple-icon-57x57.png" width="57" height="57" />
        <icon src="icons/apple-icon-114x114.png" width="114" height="114" />
        <icon src="icons/apple-icon-72x72.png" width="72" height="72" />
        <icon src="icons/apple-icon-144x144.png" width="144" height="144" />
    </platform>
    <platform name="android">
        <icon src="icons/android-icon-48x48.png" density="mdpi" />
        <icon src="icons/android-icon-72x72.png" density="hdpi" />
        <icon src="icons/android-icon-96x96.png" density="xhdpi" />
        <icon src="icons/android-icon-144x144.png" density="xxhdpi" />
        <icon src="icons/android-icon-192x192.png" density="xxxhdpi" />
    </platform>


    <plugin name="https://$TABRIS_PDF_TOKEN@github.com/eclipsesource/tabris-pdf.git" />
    <plugin name="https://github.com/eclipsesource/tabris-url-scheme.git" />

</widget>